{
	"name": "secrets-app",
	"private": true,
	"version": "0.0.0",
	"main": "electron/main.js",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint .",
		"preview": "vite preview",
		"electron": "electron .",
		"electron:dev": "concurrently \"vite\" \"wait-on http://localhost:3000 && electron .\"",
		"build:electron": "vite build && electron-builder",
		"build:electron:dir": "vite build && electron-builder --dir"
	},
	"build": {
		"appId": "com.yourcompany.secretsapp",
		"productName": "Secrets App",
		"directories": {
			"output": "dist-electron"
		},
		"files": [
			"dist/**/*",
			"electron/main.js"
		],
		"mac": {
			"category": "public.app-category.productivity"
		},
		"win": {
			"target": "nsis"
		},
		"linux": {
			"target": "AppImage"
		}
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.14",
		"@tanstack/react-query": "^5.90.2",
		"@tanstack/react-query-devtools": "^5.90.2",
		"@tanstack/react-router": "^1.132.33",
		"crypto-js": "^4.2.0",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tailwindcss": "^4.1.14",
		"zustand": "^5.0.8",
		"electron-is-dev": "^3.0.1"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@types/crypto-js": "^4.2.2",
		"@types/electron": "^1.6.12",
		"@types/node": "^24.6.0",
		"@types/react": "^19.1.16",
		"@types/react-dom": "^19.1.9",
		"@vitejs/plugin-react-swc": "^4.1.0",
		"concurrently": "^9.2.1",
		"cross-env": "^10.1.0",
		"electron": "^38.2.1",
		"electron-builder": "26.0.12",
		"eslint": "^9.36.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.22",
		"globals": "^16.4.0",
		"typescript": "~5.9.3",
		"typescript-eslint": "^8.45.0",
		"vite": "^7.1.7",
		"wait-on": "^9.0.1"
	},
	"packageManager": "yarn@4.10.3+sha512.c38cafb5c7bb273f3926d04e55e1d8c9dfa7d9c3ea1f36a4868fa028b9e5f72298f0b7f401ad5eb921749eb012eb1c3bb74bf7503df3ee43fd600d14a018266f"
}

